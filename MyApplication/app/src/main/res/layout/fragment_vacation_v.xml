<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".ui.VacationV">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="292dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="200dp"
            android:layout_marginEnd="20dp"
            android:background="#053FB3"
            android:text="     האם אתה בטוח ?"
            android:textAllCaps="false"
            android:textColor="#050505"
            android:textColorHighlight="#0B0606"
            android:textColorHint="#070101"
            android:textColorLink="#9C0C0C"
            android:textDirection="firstStrongRtl"
            android:textSize="42dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button7"
            android:layout_width="159dp"
            android:layout_height="66dp"
            android:layout_weight="1"
            android:text="לא  ,  חזור"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button8"
            android:layout_width="152dp"
            android:layout_height="66dp"
            android:layout_marginHorizontal="25dp"
            android:layout_weight="1"
            android:text="צא לחופשה"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="281dp"
            android:layout_weight="1"
            android:src="@drawable/vacation" />
    </LinearLayout>

</LinearLayout>