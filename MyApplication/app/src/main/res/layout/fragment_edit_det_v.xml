<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/edit_details_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".ui.editDetV">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/reg_h_headlineV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="עריכת פרטי משתמש"
        android:textAlignment="center"
        android:textSize="40sp" />

    <LinearLayout
        android:id="@+id/name_h_layoutV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal"/>

    <LinearLayout
        android:id="@+id/year_h_layoutV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>

    <LinearLayout
        android:id="@+id/address_h_layoutV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="end"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/edit_details_cityV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:importantForAutofill="no"
            android:layoutDirection="rtl"
            android:textDirection="rtl" />

        <TextView
            android:id="@+id/address_p_titleV"
            android:layout_width="wrap_content"
            android:layout_height="73dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_weight="0"
            android:gravity="center"
            android:layoutDirection="rtl"
            android:text="עיר מגורים"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/phone_layoutV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="end"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edit_details_cellnumberV"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:importantForAutofill="no"
            android:inputType="phone"
            android:layoutDirection="rtl"
            android:textAlignment="textStart" />

        <TextView
            android:id="@+id/phone_p_titleV"
            android:layout_width="wrap_content"
            android:layout_height="73dp"
            android:layout_gravity="end"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:gravity="center_vertical"
            android:layoutDirection="rtl"
            android:text="מספר טלפון"
            android:textSize="30sp" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/email_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone_layout">

        <ProgressBar
            android:id="@+id/progress_bar_pV"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/password_layoutV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/password_resetV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:layoutDirection="rtl"
            android:shadowColor="#000000"
            android:text="לשינוי סיסמה הקש כאן"
            android:textColor="#2364AA"
            android:textColorHighlight="#FFFFFF"
            android:textColorLink="#417FC1"
            android:textSize="30sp"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_save_changesV"
        android:layout_width="240dp"
        android:layout_height="73dp"
        android:layout_gravity="center"
        android:layout_marginTop="140dp"
        android:backgroundTint="#070B9EAA"
        android:gravity="center"
        android:layoutDirection="rtl"
        android:text="אישור"

        android:textAlignment="center"
        android:textColor="#050505"
        android:textSize="36sp"
        android:textStyle="bold"
        app:iconTint="#FFFFFF" />

</LinearLayout>