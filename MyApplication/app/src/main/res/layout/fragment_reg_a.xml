<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A16CC1"
    android:backgroundTint="#F6ACF3"
    android:foregroundTint="#FFFFFF"
    android:orientation="vertical"
    tools:context=".ui.reg_a">

    <TextView
        android:id="@+id/textView41"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="הרשמה "
        android:textSize="48sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/nameInput"
            android:layout_width="233dp"
            android:layout_height="53dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="196dp"
            android:layout_height="53dp"
            android:text="שם מלא:"
            android:textColor="#000000"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/emailInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/mail1"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:text="כתובת מייל:"
            android:textColor="#000000"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/passwordInput"
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:ems="10"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/textView61"
            android:layout_width="148dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="סיסמה:"
            android:textColor="#000000"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/yearSpinner"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_weight="1"
            android:layoutDirection="rtl"
            android:autofillHints="--בחר שנת לידה--"/>

        <TextView
            android:id="@+id/textView71"
            android:layout_width="411dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="שנת לידה:"
            android:textColor="#000000"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:layout_weight="0"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/citySpinner"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:layoutDirection="rtl"/>

        <TextView
            android:id="@+id/textView81"
            android:layout_width="411dp"
            android:layout_height="59dp"
            android:layout_weight="1"
            android:text="עיר מגורים:"
            android:textColor="#000000"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/phoneInput"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:cursorVisible="false"
            android:defaultFocusHighlightEnabled="false"
            android:ems="10"
            android:inputType="phone" />

        <TextView
            android:id="@+id/textView91"
            android:layout_width="201dp"
            android:layout_height="58dp"
            android:layout_weight="0"
            android:text="מספר טלפון:"
            android:textColor="#050505"
            android:textSize="30sp" />

    </LinearLayout>

    <CheckBox
        android:id="@+id/termsCheck1"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_marginTop="120dp"
        android:layout_weight="1"
        android:buttonTint="#FFFFFF"
        android:layoutDirection="rtl"
        android:text="קראתי ואני מאשר/ת את התקנון"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="170dp"
        android:layout_height="76dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="25dp"
        android:background="#FFFFFF"
        android:gravity="center_horizontal"
        android:text="להרשמה"
        android:textSize="30sp"
        app:strokeColor="#FFFFFF" />

</LinearLayout>