<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".ui.openRegV">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_margin="26dp"
            android:text="     בקשות פתוחות באזורך "
            android:textColor="#050505"
            android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="305dp"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="149dp"
        android:layout_gravity="center|start|center_horizontal|end"
        android:layout_marginVertical="120dp">

        <Button
            android:id="@+id/button12"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="fill_horizontal|center_vertical|end"
            android:layout_marginHorizontal="100dp"
            android:layout_marginVertical="120dp"
            android:backgroundTint="#070B9EAA"
            android:text="חזרה לדף בית"
            android:textColor="#040303"
            android:textSize="22sp" />
    </LinearLayout>

</LinearLayout>